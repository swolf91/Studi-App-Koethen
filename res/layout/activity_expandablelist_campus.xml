<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/detailactivity_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/expandablelist_textview_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="Gebaeudeliste:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

        
    <ExpandableListView
        android:id="@+id/expandablelist_expandablelist_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView_buildings" >

    </ExpandableListView>

    <ImageView
        android:id="@+id/imageView_buildings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_persons"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/expandablelist_expandablelist_list"
        android:layout_toRightOf="@+id/imageView_persons"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imageView_persons"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/expandablelist_textview_headline"
        android:layout_alignTop="@+id/expandablelist_textview_headline"
        android:src="@drawable/questionmark_quizselection" />

</RelativeLayout>