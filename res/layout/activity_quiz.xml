<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sie muessen ein Quiz auswaehlen."
        android:id="@+id/quiz_textView_noquiz"
        android:layout_gravity="left|top"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Startmessage konnte nicht geladen werden"
        android:id="@+id/quiz_textView_message"
        android:layout_gravity="left|top"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quiz_button_nextstage"
        android:visibility="gone"
        android:layout_margin="15dp"
        android:onClick="nextStage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frage:"
        android:id="@+id/quiz_textView_question_headline"
        android:layout_gravity="left|top"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wenn Sie das hier sehen konnte die Frage nicht geladen werden."
        android:id="@+id/quiz_textView_question"
        android:layout_gravity="left"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone" />
</LinearLayout>