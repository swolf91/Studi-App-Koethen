<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_marginBottom="50dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="150dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/detail_arrow_left"
                    android:layout_gravity="center_horizontal|top"
                    android:onClick="onImageChange"
                    android:background="#FFAAAAAA" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/detail_image"
                    android:layout_gravity="center_horizontal|top"
                    android:onClick="onImageClick"
                />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-55dp"
                    android:layout_marginTop="50dp"
                    android:id="@+id/detail_arrow_right"
                    android:layout_gravity="center_horizontal|top"
                    android:onClick="onImageChange"
                    android:background="#FFAAAAAA" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"  >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:id="@+id/detail_textView_name_headline"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_description"
                    android:id="@+id/detail_textView_name"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse"
                    android:id="@+id/detail_textView_adress_headline"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/detail_textView_adress"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gebaeudenummer"
                    android:id="@+id/detail_textView_buildingnumber_headline"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/detail_textView_buildingnumber"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fachbereichsnummer"
                    android:id="@+id/detail_textView_facultynumber_headline"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/detail_textView_facultynumber"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Homepage"
                    android:id="@+id/detail_textView_homepage_headline"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/detail_textView_homepage"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beschreibung"
                    android:id="@+id/detail_textView_description_headline"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/detail_textView_description"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/detail_button_mapview"
        android:id="@+id/detail_button_mapview"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp" />
</LinearLayout>