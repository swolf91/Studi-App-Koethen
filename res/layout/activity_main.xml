<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainactivity_background"
    android:weightSum="4"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_imageview_city"
        android:layout_gravity="left"
        android:onClick="onButtonClick"
        android:scaleType="fitStart"
        android:src="@drawable/mainactivity_button_koethen"
        android:layout_weight="1"
        android:padding="1px" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_imageview_campus"
        android:layout_gravity="right"
        android:onClick="onButtonClick"
        android:scaleType="fitEnd"
        android:src="@drawable/mainactivity_button_campus"
        android:layout_weight="1"
        android:padding="1px" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_imageview_tour"
        android:layout_gravity="left"
        android:onClick="onButtonClick"
        android:scaleType="fitStart"
        android:src="@drawable/mainactivity_button_tour2"
        android:layout_weight="1"
        android:padding="1px" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_imageview_map"
        android:layout_gravity="right"
        android:onClick="onButtonClick"
        android:scaleType="fitEnd"
        android:src="@drawable/mainactivity_button_karte"
        android:layout_weight="1"
        android:paddingBottom="5px"
        android:paddingLeft="1px"
        android:paddingTop="1px"
        android:paddingRight="1px" />
</LinearLayout>